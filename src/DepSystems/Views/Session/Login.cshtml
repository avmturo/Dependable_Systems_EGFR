@using DepSystems.Enums
@model DepSystems.Models.LoginDetails
@{
    List<SelectListItem> userTypes = Html.GetEnumSelectList(typeof(UserType)).ToList();
    userTypes.RemoveAt((int)UserType.Admin);
    userTypes.RemoveAt((int)UserType.None);
}

<h4>Login</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-12 input-group mb-3">
                <div class="input-group-prepend">
                    <label asp-for="UserType" class="input-group-text"></label>
                </div>
                <select asp-for="UserType" asp-items="userTypes" class="custom-select"></select>
                <span asp-validation-for="UserType" class="text-danger"></span>
            </div>
            <div class="col-12 input-group mb-3">
                <div class="input-group-prepend">
                    <label asp-for="Id" class="input-group-text"></label>
                </div>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="col-12 input-group mb-3">
                <div class="input-group-prepend">
                    <label asp-for="Password" class="input-group-text"></label>
                </div>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

