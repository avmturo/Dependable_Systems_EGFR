@model DepSystems.Models.Calculation
@{
    ViewData["Title"] = "Home Page";
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/style.css">

    <title>eGFR Calculator - Home</title>

</head>

<body class="bg-light">
    <div class="container">
        <nav class="container navbar navbar-expand-lg navbar-light">
            <a class="navbar-brand" href="#">
                <img src="~/images/alpha.svg" width="30" height="30" class="d-inline-block align-top" alt="">
                Alpha EGFR Calculator
            </a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mr-auto">
                    <!-- This will be displayed if logged in
                    <li class="nav-item active">
                        <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Features</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Pricing</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" href="#">Disabled</a>
                    </li>-->
                </ul>
                <form class="form-inline my-2 my-lg-0">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="button" data-toggle="modal" data-target="#loginModal">
                        Login
                    </button>
                </form>
            </div>
        </nav>


        <!-- Login Modal -->
        <div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <form>
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLongTitle">Login</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>

                        <div class="modal-body">
                            <!-- Id -->
                            <div class="row form-group">
                                <label for="login-id" class="col-3 col-form-label">ID</label>
                                <div class="col-9">
                                    <input type="text" class="form-control" id="login-id" placeholder="NHS # or HID">
                                </div>
                            </div>

                            <!-- Password -->
                            <div class="row form-group">
                                <label for="login-password" class="col-3 col-form-label">Password</label>
                                <div class="col-9">
                                    <input type="password" class="form-control" id="login-password" placeholder="*********">
                                </div>
                            </div>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>


        <div class="row justify-content-center bg-dark py-5">
                <!-- Calculator -->
                <div class="col-10 col-sm-8 col-md-6 col-lg-4">
                    <form asp-action="Index" method="post">
                        <div class="row">
                            <!-- Age -->
                            <div class="col-12 input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1">Age</span>
                                </div>
                                <input asp-for="Age" type="number" class="form-control" placeholder="Age" aria-label="Age" aria-describedby="basic-addon1">
                            </div>

                            <!-- Gender -->
                            <div class="col-12 input-group mb-3">
                                <div class="input-group-prepend">
                                    <label class="input-group-text" for="inputGroupSelect01">Gender</label>
                                </div>
                                <select asp-for="Gender" class="custom-select" id="inputGroupSelect01">
                                    <option selected>Choose...</option>
                                    <option value="1">Female</option>
                                    <option value="2">Male</option>
                                </select>
                            </div>

                            <!-- Ethnicity -->
                            <div class="col-12 input-group mb-3">
                                <div class="input-group-prepend">
                                    <label class="input-group-text" for="inputGroupSelect02">Ethnicity</label>
                                </div>
                                <select asp-for="Ethnicity" class="custom-select" id="inputGroupSelect02">
                                    <option selected>Choose...</option>
                                    <option value="1">Black</option>
                                    <option value="2">Other</option>
                                </select>
                            </div>

                            <!-- Creatine Level -->
                            <div class="col-12 input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon2">Creatine</span>
                                </div>
                                <input asp-for="CreatinLevel" type="number" class="form-control" placeholder="Creatine" aria-label="Creatine" aria-describedby="basic-addon2">
                            </div>

                            <!-- Submission -->
                            <div class="col-12 text-center">
                                <button type="submit" class="btn btn-primary">Calculate!</button>
                            </div>
                        </div>
                    </form>
                </div>
            @if(Model != null)
            {
                <div class="col-12">
                    <table class="table table-striped table-dark">
                        <thead>
                            <tr>
                                <th scope="col">eGFR Value</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@Model.Calculate()</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

            }
        </div>
    </div>

    <!-- Footer -->
    <!-- Source: https://mdbootstrap.com/docs/jquery/navigation/footer/ -->
    <footer class="pt-4 bg-light">
        <div class="container text-center text-md-left">
            <div class="row">
                <div class="col-md-6 mt-md-0 mt-3">
                    <h5 class="text-uppercase">Licensing & Credits</h5>
                    <p>
                        Icons made by <a href="https://www.freepik.com/" title="Freepik">Freepik</a>
