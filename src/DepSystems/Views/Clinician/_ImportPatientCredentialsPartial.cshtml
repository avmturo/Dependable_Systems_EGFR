@model DepSystems.Models.ImportPatientCredentials

<div class="row justify-content-center">
    <div class="col-10 col-md-8 bg-light">
        <h4 class="text-center">CSV File Upload</h4>

        <form asp-controller="Clinician" asp-action="ImportPatientCredentials" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="File" type="file" class="form-control" style="height:auto" />
                <span asp-validation-for="File" class="text-danger"></span>
            </div>


            <div class="form-group row">
                <div class="col-3">
                    <input asp-for="UploadWithErrors" type="checkbox" class="form-control align-middle" />
                </div>
                <div class="col-9">
                    <label asp-for="UploadWithErrors"></label>
                </div>
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Upload" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

