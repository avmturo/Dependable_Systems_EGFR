@model DepSystems.Models.ImportPatientCredentials

<h4 class="text-center text-white-50">Upload Patient Credentials</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-10 col-md-8">
        <form asp-controller="Clinician" asp-action="ImportPatientCredentials" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="File" type="file" class="form-control" style="height:auto" />
                <span asp-validation-for="File" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Upload" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

