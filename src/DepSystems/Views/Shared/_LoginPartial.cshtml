<!-- Login Modal -->
<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Login</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <div class="tab-buttons tab-group-1">
                    <button class="btn btn-info" onclick="changeTab('partialPatientLogin', 'tab-group-1', this)">Patient</button>
                    <button class="btn" onclick="changeTab('partialClinicianLogin', 'tab-group-1', this)">Clinician</button>
                </div>

                <div id="partialPatientLogin" class="tab-group-1 pt-3" style="display: block;">
                    <partial name="_LoginPatient" model="new Patient()" />
                </div>
                <div id="partialClinicianLogin" class="tab-group-1 pt-3" style="display: none;">
                    <partial name="_LoginClinician" model="new Clinician()" />
                </div>

            </div>

            <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>