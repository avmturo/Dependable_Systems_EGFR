@using Microsoft.AspNetCore.Http
@using DepSystems.Enums

@model DepSystems.Models.Patient
@{
    ViewData["Title"] = "Home";
}
<h4>Change Password</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="ChangePassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-12 input-group mb-3">
                <div class="input-group-prepend">
                    <label asp-for="Password" class="input-group-text"> Current Password</label>
                </div>
                <input asp-for="Password" value="Current Password" class="form-control" aria-describedby="PasswordChanger" />

                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="col-12 input-group mb-3">
                <div class="input-group-prepend">
                    <label asp-for=" Password" class="input-group-text"> Confirm Password</label>
                </div>
                <input asp-for="Password" value=" Confirm Current Password" class="form-control" aria-describedby="PasswordChanger" />

                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="col-12 input-group mb-3">
                <div class="input-group-prepend">
                    <label asp-for="NewPassword" class="input-group-text"> New Password</label>
                </div>
                <input asp-for="NewPassword" value="New Password" class="form-control" aria-describedby="PasswordChanger" />

                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="col-12 text-center">
                <input type="submit" value="Update Password" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
