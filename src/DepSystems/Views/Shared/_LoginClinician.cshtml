@model DepSystems.Models.Clinician

<h4 class="text-center">Clinician Login</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-controller="Session" asp-action="ClinicianLogin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HCPId" class="control-label"></label>
                <input asp-for="HCPId" class="form-control" />
                <span asp-validation-for="HCPId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClinicianPassword" class="control-label"></label>
                <input asp-for="ClinicianPassword" class="form-control" />
                <span asp-validation-for="ClinicianPassword" class="text-danger"></span>
            </div>
            @if (Model.RedirectLink != null)
            {
                <input asp-for="RedirectLink" value="@Model.RedirectLink" hidden />
            }
            <div class="form-group text-center">
                <input type="submit" value="Login" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

